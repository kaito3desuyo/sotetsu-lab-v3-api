{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["node", "prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true
      }
    ],
    "semi": ["error", "never"]
  }
}
